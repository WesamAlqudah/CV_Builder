<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.miu.cs473de.cv_builder">

    <application
        android:name="com.example.cvbuilder.common.CvBuilderApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CVBuilder">
        <activity
            android:name="com.example.cvbuilder.ui.HomeActivity"
            android:exported="false" />
        <activity
            android:name="com.example.cvbuilder.ui.launchpad.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.example.cvbuilder.ui.launchpad.RegisterActivity"
            android:exported="false"
            android:theme="@style/RegisterActivityStyle"/>
        <activity
            android:name="com.example.cvbuilder.ui.launchpad.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>